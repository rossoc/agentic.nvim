{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "pathStrict": true
  },
  "diagnostics": {
    "unusedLocalExclude": ["_*"]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME/lua",
      "$VIMRUNTIME/lua/vim/lsp",
      "$PWD/lua",
      "${3rd}/luv/library",
      "$DEPS_PATH/luvit-meta/library"
    ],
    "checkThirdParty": false
  },
  "type": {
    "checkTableShape": true
  },
  "typeFormat": {
    "config": {
      "format_line": "false"
    }
  },
  "doc": {
    "privateName": ["_*"]
  }
}
